def message (age)
    if age < 18
        "you are young but it's never too early for codding"
    else
        "it's high time!"
    end
end
def greeting (username)
    puts "Hello #{username}"
end

print "Please, enter your Full name > "
name = gets.chomp()
print "Please, enter your Full age > "
age = gets.to_i
greeting (name)
puts message (age)


def foobar (first_number, second_number)
    if first_number = 20 || second_number = 20
        print second_number
    else
        puts first_number + second_number
    end
end

puts "Enter first number: "
first_number = gets.to_i
puts "Enter second number: "
second_number = gets.to_i
foobar(first_number, second_number)
