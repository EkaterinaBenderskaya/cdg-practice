def check_string
    if string [-2..2] == "CS"
      2**string.length
    else string.reverse
end
end

def pokemon_kit
    puts "enter the quantity of pokemons"
    quantity = gets.to_i
    if quantity < 0
    puts "wrong number"
    pokemon = []
